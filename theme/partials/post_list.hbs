{{#foreach posts}}
    <article class="Yayul_article">
        <header class="Yayul_article__header">
            <time class="Yayul_article__date" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">
                {{date format='dddd DD MMM YYYY'}}
            </time>
            <h1 class="Yayul_article__title" itemprop="headline">
              <a href="{{{url}}}" rel="bookmark">{{title}}</a>
            </h1>
        </header>

        <div class="Yayul_article__content" itemprop="articleBody">
            {{excerpt}}...
        </div>

        {{#if tags}}
            <div class="Yayul_article__tags">
                Tags: {{tags separator=", "}}
            </div>
        {{/if}}
    </article>
{{/foreach}}
