{{!< default}}
{{> header}}


<main class="Yayul_main" role="main">
    {{#post}}
        <article class="Yayul_post" role="article" itemscope itemtype="http://schema.org/Article">
            <header class="Yayu_post__header">
                <time class="Yayul_post__date" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">
                    {{date format='dddd DD MMM YYYY'}}
                </time>
                <h1 class="Yayul_post__title" itemprop="headline">{{title}}</h1>
            </header>

            <div class="Yayul_post__content" itemprop="articleBody">
                {{content}}
            </div>

            {{#if tags}}
                <div class="Yayul_post__tags"> Tags: {{tags separator=", "}} </div>
            {{/if}}

            <div class="Yayul_post__shareLinks">
                <h4 class="Yayul_post__shareText">Share this post: &nbsp;</h4>
                <a class="Yayul_post__shareLink icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}">
                    <span class="Yayul_hidden">Twitter</span>
                </a>
                <a class="Yayul_post__shareLink  icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}">
                    <span class="Yayul_hidden">Facebook</span>
                </a>
                <a class="Yayul_post__shareLink icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}">
                    <span class="Yayul_hidden">Google+</span>
                </a>
            </div>

            {{#if author}}
                <footer class="Yayul_post__footer">
                    <address itemscope itemtype="http://schema.org/Person">
                        {{#if author.image}}
                            <div class="Yayul_author__image">
                                <img src="{{author.image}}" itemprop="image" />
                            </div>
                        {{/if}}

                        <h4 class="Yayul_author__name">
                          <span itemprop="author">{{author.name}}</span>
                        </h4>


                        {{#if author.website}}
                            <div class="Yayul_author__website">
                              <a href="{{author.website}}" itemprop="url">{{author.website}}</a>
                            </div>
                        {{/if}}
                    </address>

                    <div class="Yayul_author__bio">
                        <p>{{author.bio}}</p>
                    </div>
                </footer>
            {{/if}}
        </article>
    {{/post}}


    {{#if pagination}}
        <div class="Yayul__pagination">
            {{{pagination}}}
        </div>
    {{/if}}
</main>


{{> footer}}
